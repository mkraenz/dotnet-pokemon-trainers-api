@page
@model TrainerModel
@{
    ViewData["Title"] = "Overview";
    int counter = 0;
}
@if (User?.Identity?.IsAuthenticated ?? false)
{
    <h1>Welcome, @User.Identity.Name</h1>
}

<div class="text-center d-flex flex-column justify-content-between fullwidth">
    <h1 class="display-4 mb-5 mt-5">Welcome back, Trainer @(User.Identity.Name)</h1>
    <h2 class="mb-4">
        @if (Model.Team?.Name == null)
        {
            @("Your Team")
        }
        else
        {
            @(Model.Team?.Name)
        }

        @if (Model.Team is null)
        {
            <a asp-page="/createteam">
                <button class="btn btn-rounded opacity-50" aria-label="create team">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil"
                    viewBox="0 0 16 16">
                        <path
                        d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                    </svg>
                </button>
            </a>
        }
        else
        {
            <a asp-page="/editteam" asp-route-id="@(Model.Team?.Id)">
                <button class="btn btn-rounded opacity-50" aria-label="Edit team">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil"
                    viewBox="0 0 16 16">
                        <path
                        d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                    </svg>
                </button>
            </a>
        }
    </h2>

    <div class="container mb-5">
        <div class="row">
            <div class="col">
                <figure class="col d-flex flex-column align-items-center position-relative">
                    <img width="100px" src='@Url.Content("~/images/pokeball.png")' style="opacity: 0.2;" />
                    <img width="100px" src="@(Model.Team?.First?.Species.SpriteUrl)" class="position-absolute" />
                    <figcaption class="text-capitalize">@(Model.Team?.First?.Species.Name)</figcaption>
                </figure>
            </div>

            <div class="col">
                <figure class="col d-flex flex-column align-items-center position-relative">
                    <img width="100px" src='@Url.Content("~/images/pokeball.png")' style="opacity: 0.2;" />
                    <img width="100px" src="@(Model.Team?.Second?.Species.SpriteUrl)" class="position-absolute" />
                    <figcaption class="text-capitalize">@(Model.Team?.Second?.Species.Name)</figcaption>
                </figure>
            </div>

            <div class="col">
                <figure class="col d-flex flex-column align-items-center position-relative">
                    <img width="100px" src='@Url.Content("~/images/pokeball.png")' style="opacity: 0.2;" />
                    <img width="100px" src="@(Model.Team?.Third?.Species.SpriteUrl)" class="position-absolute" />
                    <figcaption class="text-capitalize">@(Model.Team?.Third?.Species.Name)</figcaption>
                </figure>
            </div>

            <div class="col">
                <figure class="col d-flex flex-column align-items-center position-relative">
                    <img width="100px" src='@Url.Content("~/images/pokeball.png")' style="opacity: 0.2;" />
                    <img width="100px" src="@(Model.Team?.Fourth?.Species.SpriteUrl)" class="position-absolute" />
                    <figcaption class="text-capitalize">@(Model.Team?.Fourth?.Species.Name)</figcaption>
                </figure>
            </div>


            <div class="col">
                <figure class="col d-flex flex-column align-items-center position-relative">
                    <img width="100px" src='@Url.Content("~/images/pokeball.png")' style="opacity: 0.2;" />
                    <img width="100px" src="@(Model.Team?.Fifth?.Species.SpriteUrl)" class="position-absolute" />
                    <figcaption class="text-capitalize">@(Model.Team?.Fifth?.Species.Name)</figcaption>
                </figure>
            </div>

            <div class="col">
                <figure class="col d-flex flex-column align-items-center position-relative">
                    <img width="100px" src='@Url.Content("~/images/pokeball.png")' style="opacity: 0.2;" />
                    <img width="100px" src="@(Model.Team?.Sixth?.Species.SpriteUrl)" class="position-absolute" />
                    <figcaption class="text-capitalize">@(Model.Team?.Sixth?.Species.Name)</figcaption>
                </figure>
            </div>
        </div>
    </div>

    <div class="mb-5">
        <h2 class="mb-4">Your Bank</h2>
        <div class="container">
            <div class="row">
                @foreach (var pokemon in Model.Pokemons)
                {
                    <div class="col">
                        <figure class="col d-flex flex-column align-items-center">
                            <img width="100px" src='@Url.Content("~/images/pokeball.png")' style="opacity: 0.2;" />
                            <img width="100px" src="@(pokemon.Species.SpriteUrl)" class="position-absolute" />
                            <figcaption class="text-capitalize">@counter @(pokemon.Species.Name)</figcaption>
                        </figure>
                    </div>

                    counter++;
                }
            </div>
        </div>
    </div>
</div>
        <img width="100px" src="@(Model.Team?.Third?.Species.SpriteUrl)">@(Model.Team?.Third?.Species.Name)</img>
        <img width="100px" src="@(Model.Team?.Fourth?.Species.SpriteUrl)">@(Model.Team?.Fourth?.Species.Name)</img>
        <img width="100px" src="@(Model.Team?.Fifth?.Species.SpriteUrl)">@(Model.Team?.Fifth?.Species.Name)</img>
        <img width="100px" src="@(Model.Team?.Sixth?.Species.SpriteUrl)">@(Model.Team?.Sixth?.Species.Name)</img>

    </div>
